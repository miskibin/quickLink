<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  
  <Package Name="QuickLink" 
           Version="1.0.0.0" 
           Manufacturer="miskibin"
           UpgradeCode="E1C8F2A3-4B5D-4E6F-A1B2-1234567890AB"
           Scope="perMachine"
           InstallerVersion="500">
    
    <SummaryInformation Description="Fast, elegant link, clipboard, and commands manager for Windows"
                        Comments="QuickLink Installer Package"
                        Manufacturer="miskibin" />
    
    <MajorUpgrade DowngradeErrorMessage="A newer version of QuickLink is already installed." />
    
    <Media Id="1" Cabinet="quicklink.cab" EmbedCab="yes" />

    <!-- Main feature -->
    <Feature Id="MainFeature" Title="QuickLink Application" Level="1">
      <!-- WiX v6 Files element for automatic directory harvesting -->
      <Files Include="!(bindpath.bin)**" Directory="INSTALLFOLDER" />
      
      <ComponentGroupRef Id="ShortcutComponents" />
    </Feature>

    <!-- UI Configuration -->
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <ui:WixUI Id="WixUI_InstallDir" />
    
    <!-- Custom license file -->
    <WixVariable Id="WixUILicenseRtf" Value="license.rtf" />

  </Package>

  <!-- Directory structure - x64 only -->
  <Fragment>
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="ManufacturerFolder" Name="miskibin">
        <Directory Id="INSTALLFOLDER" Name="QuickLink" />
      </Directory>
    </StandardDirectory>
    
    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ProgramMenuSubfolder" Name="QuickLink" />
    </StandardDirectory>
    
    <StandardDirectory Id="DesktopFolder" />
  </Fragment>

  <!-- Shortcuts -->
  <Fragment>
    <ComponentGroup Id="ShortcutComponents">
      <!-- Start Menu shortcut -->
      <Component Id="StartMenuShortcut" Directory="ProgramMenuSubfolder" Guid="D4C3B2A1-7F6E-4D5C-8B9A-7654321098DC">
        <Shortcut Id="StartMenuQuickLink"
                  Name="QuickLink"
                  Description="Fast, elegant link, clipboard, and commands manager"
                  Target="[INSTALLFOLDER]QuickLink.exe"
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="ProgramMenuSubfolder" On="uninstall" />
        <RegistryValue Root="HKCU" 
                       Key="Software\miskibin\QuickLink" 
                       Name="StartMenu" 
                       Type="integer" 
                       Value="1" 
                       KeyPath="yes" />
      </Component>
      
      <!-- Desktop shortcut -->
      <Component Id="DesktopShortcut" Directory="DesktopFolder" Guid="E5D4C3B2-8A9B-4E6F-9C7D-6543210987ED">
        <Shortcut Id="DesktopQuickLink"
                  Name="QuickLink"
                  Description="Fast, elegant link, clipboard, and commands manager"
                  Target="[INSTALLFOLDER]QuickLink.exe"
                  WorkingDirectory="INSTALLFOLDER" />
        <RegistryValue Root="HKCU" 
                       Key="Software\miskibin\QuickLink" 
                       Name="Desktop" 
                       Type="integer" 
                       Value="1" 
                       KeyPath="yes" />
      </Component>
      
      <!-- Auto-start with Windows (optional) -->
      <Component Id="StartupRegistry" Directory="INSTALLFOLDER" Guid="F6E5D4C3-9B8A-4F7E-8D6C-5432109876FE">
        <RegistryValue Root="HKCU" 
                       Key="Software\Microsoft\Windows\CurrentVersion\Run" 
                       Name="QuickLink" 
                       Type="string" 
                       Value="[INSTALLFOLDER]QuickLink.exe"
                       KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
