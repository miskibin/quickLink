<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="quickLink.Views.AddEditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:quickLink.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    PrimaryButtonCommand="{x:Bind ViewModel.SaveCommand}"
    CloseButtonCommand="{x:Bind ViewModel.CancelCommand}"
 DefaultButton="Primary">

    <StackPanel Spacing="16" Padding="0,8,0,0">
        <TextBox
          Header="Title (Optional)"
            PlaceholderText="Enter a descriptive title..."
  Text="{x:Bind ViewModel.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          MaxLength="100" />

        <TextBox
            Header="Value"
  PlaceholderText="Enter text or URL..."
     Text="{x:Bind ViewModel.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        TextWrapping="Wrap"
     AcceptsReturn="True"
 MinHeight="100"
          MaxHeight="200" />

        <CheckBox
            Content="Encrypt value"
IsChecked="{x:Bind ViewModel.IsEncrypted, Mode=TwoWay}" />

        <TextBlock
     Text="URLs starting with 'http' will open in browser. Other values will be copied to clipboard."
  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            TextWrapping="Wrap"
         FontSize="12"
            Opacity="0.8" />
    </StackPanel>
</ContentDialog>
