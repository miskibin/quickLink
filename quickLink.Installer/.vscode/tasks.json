{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Publish QuickLink App (x64)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "publish", 
                "../QuickLink/QuickLink.csproj",
                "-c", "Release",
                "--self-contained", "true",
                "-r", "win-x64",
                "-o", "../publish",
                "-p:PublishSingleFile=false",
                "-p:PublishReadyToRun=false",
                "-p:Platform=x64"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "2. Build MSI Installer (x64)",
            "type": "shell",
            "command": "wix",
            "args": [
                "build",
                "Package.wxs",
                "AppFiles.wxs",
                "-ext",
                "WixToolset.UI.wixext",
                "-arch",
                "x64",
                "-o",
                "bin/QuickLink.msi"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "dependsOn": "1. Publish QuickLink App (x64)"
        },
        {
            "label": "3. Build Versioned MSI (x64)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "$version = Read-Host 'Enter version (e.g., 1.0.1.0)'; if ([string]::IsNullOrEmpty($version)) { $version = '1.0.0.0' }; wix build Package.wxs -ext WixToolset.UI.wixext -arch x64 -d Version=$version -o \"bin/QuickLink-$version.msi\""
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "1. Publish QuickLink App (x64)"
        },
        {
            "label": "4. Clean Build Files",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path 'bin') { Remove-Item 'bin' -Recurse -Force; Write-Host 'Cleaned bin folder' } else { Write-Host 'No bin folder to clean' }; if (Test-Path 'obj') { Remove-Item 'obj' -Recurse -Force; Write-Host 'Cleaned obj folder' } else { Write-Host 'No obj folder to clean' }; if (Test-Path '../publish') { Remove-Item '../publish' -Recurse -Force; Write-Host 'Cleaned publish folder' } else { Write-Host 'No publish folder to clean' }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "5. Full Build Process (x64)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "4. Clean Build Files",
                "1. Publish QuickLink App (x64)", 
                "2. Build MSI Installer (x64)"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
